<%= form_with(model: sound, local: true) do |f|%>
<%=  render 'error_messages', model: f.object %>

  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :explain, "内容説明" %><br />
    <%= f.text_area :explain, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :file, "オーディオファイル" %><br />
    <%= f.file_field :file %>
  </div>

  <div class="actions">
    <%= f.submit "送信", class: :form__btn  %>
  </div>
<% end %>