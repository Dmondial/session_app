<%= form_with(model: audio, local: true) do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :explain, "コメント" %><br />
    <%= f.text_area :explain, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :audio, "オーディオファイル" %><br />
    <%= f.file_field :audio %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>