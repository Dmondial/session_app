<div class='chat-room-form'>
  <h1>新規セッション</h1>
  <%=form_with(model: @session,local: true) do |f|%>
  <%=  render '/sounds/error_messages', model: f.object %>

    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :セッション名, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :room, class: 'chat__room_name chat-room-form__input', placeholder: 'チャットルーム名を入力してください'%>
      </div>
    </div>
    <div class='chat-room-form__field'>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>

        <% if params[:id].present? %>
          <label class='chat-room-form__label' for='chat_room_チャットメンバー'><%=@sound.find(params[:id]).title%>とセッションする曲を選んでください</label>
        <% else %>
          <label class='chat-room-form__label' for='chat_room_チャットメンバー'><%=@title_id.title%>とセッションする曲を選んでください</label>
        <% end %>

      </div>
      <div class='chat-room-form__field--right'>
        
        <select name="session[sound_ids][]" multiple>
          <%if params[:id].present? %>
            <% @sound.where.not(id: params[:id] ).each do |sound| %>
              <option value=<%= sound.id %>><%= sound.title %></option>
            <% end %>
          <% else %>
            <% @sound.where.not(id: @title_id[:id] ).each do |sound| %>
              <option value=<%= sound.id %>><%= sound.title %></option>
            <% end %>
          <% end %>
        </select>

        <% if params[:id].present? %>
          <input name="session[sound_ids][]" type="hidden" value=<%= params[:id] %>>
        <% else %>
          <input name="session[sound_ids][]" type="hidden" value=<%= @title_id[:id] %>>
        <% end %>
        
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit class: 'chat-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>
